@model Cars.Models.Car
@{
    ViewData["Title"] = $"Details: {@Model.Id}";
}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">
        <a asp-controller="Cars" asp-action="Index">Cars</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
        @Model.Model '@Model.AssemblyDate.Year.ToString().Remove(0, 2)
    </li>
  </ol>
</nav>

<div class="text-center">
    <h1 class="display-4">@Model.Model</h1>
</div>

<ul>
    <li><strong>Identification:</strong> @Model.Id</li>
    <li><strong>Manufacturer:</strong> @Model.Manufacturer</li>
    <li><strong>Assembly date:</strong> @Model.AssemblyDate.ToShortDateString()</li>
</ul>
